<Page
    x:Class="ThreadRacer.SelectTrack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThreadRacer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid FocusVisualSecondaryBrush="#99000000" Background="#FF555353">
        <TextBlock HorizontalAlignment="Center" Margin="0,30,0,0" Text="Select Track" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48" SelectionChanged="TextBlock_SelectionChanged"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="112,108,0,0" VerticalAlignment="Top" Height="100" Width="200" FontSize="30" Click="Button_Click" Background="#33000000"/>
        <Button Content="Factorials" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" Height="100" Width="200" FontSize="30" Background="#33000000" Click="Button_Click_1"/>
        <Button Content="Loop" HorizontalAlignment="Center" Margin="0,295,0,0" VerticalAlignment="Top" Height="100" Width="200" Background="#33000000" FontSize="36" Click="Button_Click_2"/>
        <Button Content="Prime Nrs." HorizontalAlignment="Center" Margin="0,428,0,0" VerticalAlignment="Top" Height="100" Width="200" FontSize="30" Background="#33000000" Click="Button_Click_3"/>

    </Grid>
</Page>
